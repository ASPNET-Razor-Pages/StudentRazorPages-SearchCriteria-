@page
@using StudentRazorPages_SearchCriteria_.Model;
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<h4>Create New Student</h4>
<div>
    <form method="post">
        <div class="form-group">
            <label class="col-sm-2" asp-for="@Model.Student.Id"> </label>
            <input type="text" class="form-control" asp-for="@Model.Student.Id" />
        </div>
        <div class="form-group">
            <label class="col-sm-2" asp-for="@Model.Student.Name"> </label>
            <input type="text" class="form-control" asp-for="@Model.Student.Name" />
        </div>
        <div class="form-group">
            <label class="col-sm-2" asp-for="@Model.Student.ImagePath"> </label>
            <input type="text" class="form-control" asp-for="@Model.Student.ImagePath" />
        </div>
        <div class="form-group">
            <label class="col-sm-2" asp-for="@Model.Student.Section"> </label>
            <select type="text" class="form-control" asp-for="@Model.Student.Section" asp-items="Html.GetEnumSelectList<Section>()">
                <option value="">Choose a passion</option>
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
<div>
    <form method="get">
        Search:
        <input type="text" asp-for="SearchCriteria" />
        <input type="submit" value="Filter" />

    </form>
</div>

<div>
    <p style="color:aqua"> List of Students</p>
    @foreach (var student in Model.Students)
    {
        var imagePath = "/Images/" + student.Value.ImagePath;
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@imagePath" alt="Student Name">
            <div class="card-body">
                <h5 class="card-title">@student.Value.Name</h5>
                <p class="card-text">@student.Value.Id</p>
                <p class="card-text">@student.Value.Section</p>
                <a href="#" class="btn btn-primary">View Me</a>
            </div>
        </div>
    }

</div>
